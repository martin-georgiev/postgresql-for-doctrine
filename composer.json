{
    "name": "martin-georgiev/postgresql-for-doctrine",
    "type": "library",
    "description": "Extends Doctrine with native PostgreSQL support for arrays, JSONB, ranges, PostGIS geometries, text search, ltree, uuid, and 100+ PostgreSQL-specific functions.",
    "keywords": [
        "martin-georgiev",
        "postgresql",
        "postgres",
        "postgres-extension",
        "postgis",
        "postgis-geometry",
        "doctrine",
        "doctrine-orm",
        "doctrine-dbal",
        "doctrine-types",
        "dbal",
        "json",
        "jsonb",
        "json-data",
        "text-search",
        "tsvector",
        "arrays",
        "array-data-types",
        "uuid",
        "range",
        "spatial",
        "ltree"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Martin Georgiev",
            "email": "martin.georgiev@gmail.com",
            "role": "author"
        }
    ],

    "autoload": {
        "psr-4": {
            "MartinGeorgiev\\": "src/MartinGeorgiev/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Fixtures\\MartinGeorgiev\\": "fixtures/MartinGeorgiev/",
            "Tests\\Integration\\MartinGeorgiev\\": "tests/Integration/MartinGeorgiev/",
            "Tests\\Unit\\MartinGeorgiev\\": "tests/Unit/MartinGeorgiev/"
        }
    },

    "require": {
        "php": "^8.2 <8.6",
        "ext-ctype": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "doctrine/dbal": "~2.10||~3.0||~4.0"
    },
    "require-dev": {
        "deptrac/deptrac": "^4.0",
        "doctrine/orm": "~2.14||~3.0",
        "ekino/phpstan-banned-code": "^3.0",
        "friendsofphp/php-cs-fixer": "^3.92.5",
        "phpstan/phpstan": "^2.1.33",
        "phpstan/phpstan-deprecation-rules": "^2.0.3",
        "phpstan/phpstan-doctrine": "^2.0.12",
        "phpstan/phpstan-phpunit": "^2.0.11",
        "phpunit/phpunit": "^10.5.60",
        "rector/rector": "^2.3.0",
        "symfony/cache": "^6.4||^7.0",
        "symfony/var-exporter": "^6.4||^7.0"
    },
    "suggest": {
        "php": "^8.4",
        "doctrine/orm": "~2.14||~3.0"
    },

    "scripts": {
        "deptrac": [
            "deptrac analyze --config-file=./ci/deptrac/config.yml --cache-file=./ci/deptrac/.cache --no-interaction --no-progress"
        ],
        "php-cs-fixer": [
            "php-cs-fixer fix --config=./ci/php-cs-fixer/config.php --allow-unsupported-php-version=yes --show-progress=none --no-interaction --diff -v"
        ],
        "phpstan": [
            "phpstan analyse --configuration=./ci/phpstan/config.neon"
        ],
        "phpunit:unit": [
            "phpunit --configuration=./ci/phpunit/config-unit.xml"
        ],
        "phpunit:integration": [
            "phpunit --configuration=./ci/phpunit/config-integration.xml"
        ],
        "rector": [
            "rector --config=./ci/rector/config.php --ansi --no-progress-bar"
        ],

        "check-code-style": [
            "@php-cs-fixer --dry-run",
            "@rector --dry-run"
        ],
        "fix-code-style": [
            "@rector",
            "@php-cs-fixer"
        ],
        "run-static-analysis": [
            "@phpstan",
            "@deptrac"
        ],
        "run-integration-tests": [
            "@phpunit:integration"
        ],
        "run-unit-tests": [
            "@phpunit:unit"
        ],
        "run-all-tests": [
            "@run-unit-tests",
            "@run-integration-tests"
        ]
    },

    "config": {
        "bin-dir": "bin",
        "sort-packages": true
    },
    "prefer-stable": true
}
